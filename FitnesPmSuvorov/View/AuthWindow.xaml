<Window x:Class="FitnesPmSuvorov.View.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnesPmSuvorov.View"
        mc:Ignorable="d"
        Title="окно авторизации" Height="450" Width="400">
    <Grid Background="#ddd2b4">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Логин:" Height="50" HorizontalAlignment="Center" FontSize="32" Foreground="#231f20"/>
            <TextBox Template="{StaticResource TextBoxBaseControlTemplate}" Text="{Binding Login}" Height="50" Margin="10" Background="#60331a"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Пароль:" Height="50" HorizontalAlignment="Center" FontSize="32" Foreground="#231f20"/>
            <PasswordBox Name="Password" Template="{StaticResource PasswordBoxControlTemplate}"  Height="50" Margin="10" Background="#60331a"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Button  Style="{StaticResource ButtonStyle}" Name="BtnVhod" Content="{Binding BtnVhod}" Click="BtnVhod_Click"  Foreground="White" HorizontalAlignment="Right" Height="50" Width="100" VerticalAlignment="Center" Margin="10,50,10,10"/>
        </StackPanel>
    </Grid>
</Window>
